---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
// Normalize path by removing base URL for active page detection
const basePath = import.meta.env.BASE_URL.replace(/\/$/, ''); // Remove trailing slash
const relativePath = currentPath.replace(basePath, '') || '/';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Shrikhand&display=swap" rel="stylesheet" />
    <title>{title} | Highfields Food</title>
  </head>
  <body>
    <nav class="fixed top-0 w-full bg-white shadow-md z-50">
      <div class="max-w-7xl mx-auto" style="padding-left: 0.5rem; padding-right: 2rem;">
        <div class="flex justify-between items-center h-20">
          <!-- Logo -->
          <a href={import.meta.env.BASE_URL} class="flex items-center">
            <img src={`${import.meta.env.BASE_URL}images/Highfields_logo_no_bg.png`} alt="Highfields Food" class="h-20 w-auto" />
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex" style="gap: 2rem;">
            <a
              href={`${import.meta.env.BASE_URL}`}
              style={`color: var(--dark-brown); padding: 0.5rem 1rem; font-weight: ${relativePath === '/' ? '600' : '400'}; border-bottom: ${relativePath === '/' ? '2px solid var(--burgundy)' : 'none'};`}
            >
              Home
            </a>
            <a
              href={`${import.meta.env.BASE_URL}products`}
              style={`color: var(--dark-brown); padding: 0.5rem 1rem; font-weight: ${relativePath === '/products' ? '600' : '400'}; border-bottom: ${relativePath === '/products' ? '2px solid var(--burgundy)' : 'none'};`}
            >
              Products
            </a>
            <a
              href={`${import.meta.env.BASE_URL}about`}
              style={`color: var(--dark-brown); padding: 0.5rem 1rem; font-weight: ${relativePath === '/about' ? '600' : '400'}; border-bottom: ${relativePath === '/about' ? '2px solid var(--burgundy)' : 'none'};`}
            >
              About
            </a>
            <a
              href={`${import.meta.env.BASE_URL}contact`}
              style={`color: var(--dark-brown); padding: 0.5rem 1rem; font-weight: ${relativePath === '/contact' ? '600' : '400'}; border-bottom: ${relativePath === '/contact' ? '2px solid var(--burgundy)' : 'none'};`}
            >
              Contact
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden text-[var(--dark-brown)]">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <a href={`${import.meta.env.BASE_URL}`} class="block py-2 text-[var(--dark-brown)] hover:text-[var(--burgundy)]">Home</a>
          <a href={`${import.meta.env.BASE_URL}products`} class="block py-2 text-[var(--dark-brown)] hover:text-[var(--burgundy)]">Products</a>
          <a href={`${import.meta.env.BASE_URL}about`} class="block py-2 text-[var(--dark-brown)] hover:text-[var(--burgundy)]">About</a>
          <a href={`${import.meta.env.BASE_URL}contact`} class="block py-2 text-[var(--dark-brown)] hover:text-[var(--burgundy)]">Contact</a>
        </div>
      </div>
    </nav>

    <main class="pt-24">
      <slot />
    </main>

    <footer class="bg-[var(--dark-brown)] text-white py-12 mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Company Info -->
          <div>
            <div class="mb-4 bg-white p-4 rounded-lg inline-block">
              <img src={`${import.meta.env.BASE_URL}images/Highfields_logo_no_bg.png`} alt="Highfields Food" class="h-12 w-auto" />
            </div>
            <p class="text-gray-300 text-sm">
              Premium quality dates and beverages since 2015.
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2 text-gray-300">
              <li><a href={`${import.meta.env.BASE_URL}`} class="hover:text-[var(--orange)] transition-colors">Home</a></li>
              <li><a href={`${import.meta.env.BASE_URL}products`} class="hover:text-[var(--orange)] transition-colors">Products</a></li>
              <li><a href={`${import.meta.env.BASE_URL}about`} class="hover:text-[var(--orange)] transition-colors">About Us</a></li>
              <li><a href={`${import.meta.env.BASE_URL}contact`} class="hover:text-[var(--orange)] transition-colors">Contact</a></li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <h3 class="font-bold mb-4">Connect With Us</h3>
            <div class="space-y-2 text-gray-300">
              <p class="text-sm">Dubai, UAE</p>
              <p class="text-sm">info@highfields.online</p>
              <p class="text-sm">+971 55 614 2734</p>
              <a
                href="https://www.instagram.com/highfieldsfood"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block mt-4 text-[var(--orange)] hover:text-white transition-colors"
              >
                Follow us on Instagram
              </a>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400 text-sm">
          <p>&copy; {new Date().getFullYear()} Highfields Food. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
