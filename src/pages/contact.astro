---
import Layout from '../components/Layout.astro';
---

<Layout title="Contact Us">
  <!-- Page Header -->
  <section class="py-16 bg-gradient-to-br from-[var(--orange)] to-[var(--burgundy)] text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold mb-4">Get In Touch</h1>
      <p class="text-xl opacity-90 max-w-2xl mx-auto">
        We'd love to hear from you. Reach out for orders, inquiries, or partnerships
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-[var(--cream)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h2 class="text-3xl font-bold text-[var(--dark-brown)] mb-6">Contact Information</h2>
            <p class="text-lg text-[var(--brown)] mb-8">
              Whether you're interested in our products, have questions, or want to explore partnership
              opportunities, we're here to help.
            </p>
          </div>

          <!-- Contact Cards -->
          <div class="space-y-6">
            <!-- Location -->
            <div class="bg-white p-6 rounded-xl shadow-lg flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[var(--burgundy)] rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-[var(--dark-brown)] mb-1">Location</h3>
                <p class="text-[var(--brown)]">Dubai Industrial City, 17R-SH-493</p>
                <p class="text-[var(--brown)]">Saih Shuaib 3, Dubai, UAE</p>
              </div>
            </div>

            <!-- Email -->
            <div class="bg-white p-6 rounded-xl shadow-lg flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[var(--forest-green)] rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-[var(--dark-brown)] mb-1">Email</h3>
                <a href="mailto:info@highfields.online" class="text-[var(--burgundy)] hover:underline">
                  info@highfields.online
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="bg-white p-6 rounded-xl shadow-lg flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[var(--orange)] rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-[var(--dark-brown)] mb-1">Phone</h3>
                <a href="tel:+971556142734" class="text-[var(--burgundy)] hover:underline">
                  +971 55 614 2734
                </a>
              </div>
            </div>

            <!-- Social Media -->
            <div class="bg-white p-6 rounded-xl shadow-lg flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[var(--gold)] rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-[var(--dark-brown)] mb-1">Instagram</h3>
                <a
                  href="https://www.instagram.com/highfieldsfood"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-[var(--burgundy)] hover:underline"
                >
                  @highfieldsfood
                </a>
              </div>
            </div>
          </div>

          <!-- Business Hours -->
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="font-bold text-[var(--dark-brown)] mb-4">Business Hours</h3>
            <div class="space-y-2 text-[var(--brown)]">
              <div class="flex justify-between">
                <span>Monday - Friday</span>
                <span class="font-semibold">9:00 AM - 6:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span class="font-semibold">10:00 AM - 4:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span class="font-semibold">Closed</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white p-8 rounded-xl shadow-lg">
          <h2 class="text-2xl font-bold text-[var(--dark-brown)] mb-6">Send Us a Message</h2>
          <form class="space-y-6" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-semibold text-[var(--dark-brown)] mb-2">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--burgundy)] focus:border-transparent outline-none transition"
                placeholder="John Doe"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-semibold text-[var(--dark-brown)] mb-2">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--burgundy)] focus:border-transparent outline-none transition"
                placeholder="john@example.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-semibold text-[var(--dark-brown)] mb-2">
                Phone Number
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--burgundy)] focus:border-transparent outline-none transition"
                placeholder="+971 XX XXX XXXX"
              />
            </div>

            <!-- Subject -->
            <div>
              <label for="subject" class="block text-sm font-semibold text-[var(--dark-brown)] mb-2">
                Subject *
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--burgundy)] focus:border-transparent outline-none transition"
              >
                <option value="">Select a subject</option>
                <option value="product-inquiry">Product Inquiry</option>
                <option value="order">Place an Order</option>
                <option value="partnership">Partnership Opportunity</option>
                <option value="feedback">Feedback</option>
                <option value="other">Other</option>
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-semibold text-[var(--dark-brown)] mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[var(--burgundy)] focus:border-transparent outline-none transition resize-none"
                placeholder="Tell us how we can help you..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-[var(--burgundy)] text-white py-3 rounded-lg font-semibold hover:bg-[var(--brown)] transition-colors"
            >
              Send Message
            </button>

            <p class="text-sm text-[var(--brown)] text-center">
              * Required fields
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-[var(--dark-brown)] mb-4">Find Us</h2>
        <p class="text-lg text-[var(--brown)]">Visit us at our location in Dubai</p>
      </div>

      <!-- Map Placeholder -->
      <div class="bg-gray-200 rounded-xl overflow-hidden shadow-lg" style="height: 400px;">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3615.6449228!2d55.1637!3d24.9!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjTCsDU0JzAwLjAiTiA1NcKwMDknNDkuMyJF!5e0!3m2!1sen!2sae!4v1234567890"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-[var(--cream)]">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-[var(--dark-brown)] mb-4">Let's Connect</h2>
      <p class="text-lg text-[var(--brown)] mb-8">
        We're always excited to hear from our customers and partners
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="mailto:info@highfields.online"
          class="bg-[var(--burgundy)] text-white px-8 py-3 rounded-lg font-semibold hover:bg-[var(--brown)] transition-colors"
        >
          Email Us
        </a>
        <a
          href="tel:+971556142734"
          class="border-2 border-[var(--burgundy)] text-[var(--burgundy)] px-8 py-3 rounded-lg font-semibold hover:bg-[var(--burgundy)] hover:text-white transition-all"
        >
          Call Us
        </a>
      </div>
    </div>
  </section>
</Layout>
